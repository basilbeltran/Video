<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.just8.apps.hellomoon" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".HelloMoonActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MoonVideoActivity"
            android:label="@string/title_activity_moon_video" >
        </activity>
        <activity
            android:name=".MoonPlayerActivity"
            android:label="@string/title_activity_moon_player" >
        </activity>
    </application>

</manifest>
